<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-collapse.collapse ul li:hover {
            background-color: #000;
        }
    </style>
</head>
@{ 
    List<string> rights =(List<string>)Session["rights"];
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                @Html.ActionLink("Student Feedback", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["rights"] != null)
                    {

                        if (rights.Contains("menu.course"))
                        {
                            <li>@Html.ActionLink("Course Info", "Index", "Course")</li>
                        }
                        if (rights.Contains("menu.user"))
                        {
                            <li>@Html.ActionLink("User", "Index", "User")</li>

                        }
                        if (rights.Contains("menu.teacher"))
                        {
                            <li>@Html.ActionLink("Teacher Info", "Index", "Teacher")</li>
                        }
                        if (rights.Contains("menu.teachercourse"))
                        {
                            <li>@Html.ActionLink("Teacher Course Info", "Index", "TeacherCourse")</li>
                        }
                        if (rights.Contains("menu.student"))
                        {
                            <li>@Html.ActionLink("Student Info", "Index", "Student")</li>
                        }
                        if (rights.Contains("menu.feedback"))
                        {
                            <li>@Html.ActionLink("Feedback", "Index", "Feedback")</li>

                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
